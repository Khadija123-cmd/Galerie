<body>
  <h1>Galerie Photo Interactive</h1>

  <!-- Zone principale qui affichera les images et le texte -->
  <div id="image">Survolez une image ci-dessous pour l'afficher ici</div>

  <!-- Miniatures à survoler -->
  <div class="gallery">
    <img src="https://media.istockphoto.com/id/1325997570/fr/photo/chat-bengale-mentant-sur-un-canap%C3%A9-et-souriant.jpg?s=612x612&w=0&k=20&c=4tJM_vcujYxD0MWK3cPyhTvLY-8ErgzXBKCbQyV5ZNA=" alt="Chat mignon allongé sur un canapé" onmouseover="upDate(this)" onmouseleave="unDo()">
    <img src="https://previews.123rf.com/images/annaav/annaav2004/annaav200400167/144556972-the-dog-runs-to-the-field-pet-on-the-nature-happy-jack-russell-terrier-plays-on-the-grass.jpg" alt="Chien jouant dans un champ" onmouseover="upDate(this)" onmouseleave="unDo()">
    <img src="https://img.freepik.com/photos-premium/plage-doree-au-coucher-du-soleil-rouges-oranges-dominant-ciel-cree-ia-generative_124507-171240.jpg" alt="Plage dorée au coucher du soleil" onmouseover="upDate(this)" onmouseleave="unDo()">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSjJmvYd_XIcY953imZi_HqZB564jgvoJ-zOg&s" alt="Montagne enneigée sous un ciel bleu" onmouseover="upDate(this)" onmouseleave="unDo()">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTJ8bVlgZCSGcHwXcZyseggv18IpvQst4_QMw&s" alt="Oiseau coloré perché sur une branche" onmouseover="upDate(this)" onmouseleave="unDo()">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRuKdgDY7F4Jbyoh6sLWHLyiHuy4Urs6J6Zqg&s" alt="Lion majestueux dans la savane" onmouseover="upDate(this)" onmouseleave="unDo()">
  </div>

  <script>
    // Fonction déclenchée quand la souris survole une image
    function upDate(previewPic) {
      console.log("Événement déclenché : survol d'une image !");
      console.log("Source de l'image :", previewPic.src);
      console.log("Texte alternatif :", previewPic.alt);

      const imageDiv = document.getElementById("image");

      // Mettre à jour le texte
      imageDiv.textContent = previewPic.alt;

      // Mettre à jour l'image d'arrière-plan
      imageDiv.style.backgroundImage = "url('" + previewPic.src + "')";
    }

    // Fonction déclenchée quand la souris quitte l'image
    function unDo() {
      console.log("Événement déclenché : départ de la souris !");
      const imageDiv = document.getElementById("image");

      // Rétablir le texte d'origine
      imageDiv.textContent = "Survolez une image ci-dessous pour l'afficher ici";

      // Rétablir l'image d'arrière-plan vide
      imageDiv.style.backgroundImage = "url('')";
    }
  </script>
</body>

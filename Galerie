  <script>
    // Fonction exécutée au chargement de la page
    function initGallery() {
      console.log("Page chargée : initialisation de la galerie...");
      const images = document.querySelectorAll('.gallery img');

      for (let i = 0; i < images.length; i++) {
        // Ajouter un tabindex pour l'accès clavier
        images[i].setAttribute('tabindex', '0');

        // Ajouter les écouteurs d'événements souris
        images[i].addEventListener('mouseover', highlightImage);
        images[i].addEventListener('mouseleave', removeHighlight);

        // Ajouter les écouteurs d'événements clavier (focus/blocage)
        images[i].addEventListener('focus', highlightImage);
        images[i].addEventListener('blur', removeHighlight);
      }
    }

    // Mettre en évidence une image
    function highlightImage(event) {
      event.target.style.borderColor = '#ff6600';
      console.log("Image activée :", event.target.alt);
    }

    // Retirer la mise en évidence
    function removeHighlight(event) {
      event.target.style.borderColor = 'transparent';
    }
  </script>
